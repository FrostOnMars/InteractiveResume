<UserControl x:Class="InteractiveResume.View.OrbitalPathControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InteractiveResume.View"
             Width="Auto" Height="Auto">
    <Grid>
        <!-- Orbital Path -->
        <Ellipse Width="{Binding SemiMajorAxis}" 
                 Height="{Binding SemiMinorAxis}" 
                 Stroke="Blue" 
                 StrokeThickness="2"/>

        <!-- Planet -->
        <local:PlanetControl x:Name="Planet" 
                             Canvas.Left="{Binding PlanetPosition.X}" 
                             Canvas.Top="{Binding PlanetPosition.Y}" />
    </Grid>
</UserControl>