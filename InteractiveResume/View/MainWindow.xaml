<Window
    x:Class="InteractiveResume.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InteractiveResume.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:InteractiveResume.View_Model"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d" 
    d:DataContext="{d:DesignInstance Type=viewModel:MainWindowViewModel}">
    <Grid Name="MainWindowGrid" HorizontalAlignment="Center" VerticalAlignment="Center" Height="{Binding }" Margin="0, 0, 0, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="50"/>
            <RowDefinition Height="1*" MinHeight="50"/>
            <RowDefinition Height="1*" MinHeight="50"/>
            <RowDefinition Height="1*" MinHeight="50"/>
            <RowDefinition Height="1*" MinHeight="50"/>
            <RowDefinition Height="1*" MinHeight="50"/>
            <RowDefinition Height="1*" MinHeight="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" MinWidth="50"/>
            <ColumnDefinition Width="25*" MinWidth="50"/>
            <ColumnDefinition Width="25*" MinWidth="50"/>
            <ColumnDefinition Width="67*" MinWidth="50"/>
            <ColumnDefinition Width="25*" MinWidth="50"/>
            <ColumnDefinition Width="25*" MinWidth="50"/>
            <ColumnDefinition Width="25*" MinWidth="50"/>
        </Grid.ColumnDefinitions>
        <Button
            x:Name="Button1"
            Width="46"
            Height="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Button1_OnClick"
            Content="Button1" />
        <Button
            x:Name="Button2"
            Grid.Row="1"
            Width="46"
            Height="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Button2_OnClick"
            Content="Button2" />
        <Button
            x:Name="Button3"
            Grid.Row="2"
            Width="46"
            Height="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Button3_OnClick"
            Content="Button3" />
        <Button
            x:Name="Button4"
            Grid.Row="3"
            Width="46"
            Height="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Button4_OnClick"
            Content="Button4" />
        <Button
            x:Name="Button5"
            Grid.Row="4"
            Width="46"
            Height="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Button5_OnClick"
            Content="Button5" />
        <Button
            x:Name="Button6"
            Grid.Row="5"
            Width="46"
            Height="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Button6_OnClick"
            Content="Button6" />
        <Button
            x:Name="Button7"
            Grid.Row="6"
            Width="46"
            Height="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Button7_OnClick"
            Content="Button7" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="3"
            Width="Auto"
            Height="Auto"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding FullName}" 
            FontSize="24"
            FontStyle="Normal"
            FontWeight="Bold"/>
        <Button 
            Grid.Row="3"
            Grid.Column="3"
            Width="Auto"
            Height="Auto"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Show me a better name!"
            Name="BetterNameShowerButton"
            Command="{Binding ClickCommand}"
            />

    </Grid>
</Window>
